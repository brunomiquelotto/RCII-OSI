<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>RC-II-OSI</title>
    <script src="/knockout.js"></script>
    <script src="/axios.js"></script>
    <link rel="stylesheet" href="/static/style/style.css">
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
</head>
<body>
       <div class="card">
        <header>
            <div class="menu">
                <h1>Camadas OSI</h1>
            </div>
        </header>
        <label for="input">Digite um texto</label>
        <input type="text" id="input" data-bind="value: input" class="input"/>
        <button data-bind="click: enviaDados" class="button">Converter</button>
        <!-- ko if: result -->
        <ul class="list">
            <li class="item" data-bind="text: 'Aplicação: ' + result()[7]"></li>
            <li class="item" data-bind="text: 'Apresentação: ' + result()[6]"></li>
            <li class="item" data-bind="text: 'Sessão: ' + result()[5]"></li>
            <li class="item" data-bind="text: 'Transporte: ' + result()[4]"></li>
            <li class="item" data-bind="text: 'Rede: ' + result()[3]"></li>
            <li class="item" data-bind="text: 'Enlace: ' + result()[2]"></li>
            <li class="item" data-bind="text: 'Física: ' + result()[1]"></li>
        </ul>
        <!-- /ko -->
    </div>
</body>
</html>

<script>
    var ViewModel = function() {
        var self = this;
        self.input = ko.observable();
        self.result = ko.observable(null);
        self.enviaDados = function() {
            axios.post('/', { text: self.input() }).then(function(response) {
                self.result(response.data);
            })
        };
    };

    var vm = new ViewModel();
    ko.applyBindings(vm);
</script>
